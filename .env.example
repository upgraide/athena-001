# Google Cloud Configuration
PROJECT_ID=athena-finance-001
GOOGLE_APPLICATION_CREDENTIALS=./keys/service-account.json

# Environment
NODE_ENV=development
SERVICE_VERSION=1.0.0

# Security
KMS_KEY_RING=athena-security-keyring
KMS_LOCATION=europe
DATA_ENCRYPTION_KEY=data-encryption-key
APP_ENCRYPTION_KEY=app-encryption-key

# Database
FIRESTORE_DATABASE_ID=(default)

# API Configuration
API_PORT=8080
API_HOST=0.0.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Finance API Keys (stored in Secret Manager)
REVOLUT_API_KEY=secret:revolut-api-key
EUROBIC_CREDENTIALS=secret:eurobic-credentials
OPENAI_API_KEY=secret:openai-api-key
ANTHROPIC_API_KEY=secret:anthropic-api-key